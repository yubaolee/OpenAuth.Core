                        sb.Append("<" + element.Type
                                  + " data-icon='" + element.Icon + "' "
                                  + " id='" + element.DomId + "' "
                                  + " class='" + element.Class + "' "
                                  + " onclick='" + element.Script + "' " + element.Attr
                                  + ">" + element.Name + "</" + element.Type + ">");
                    }
                    @Html.Raw(sb.ToString())
                }
            </div>


    </div>
